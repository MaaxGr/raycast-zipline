{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "zipline",
  "title": "Zipline",
  "description": "Screenshot Uploader for Zipline",
  "icon": "extension-icon.png",
  "author": "maaxgr",
  "categories": [
    "Productivity",
    "Media"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "upload-screenshot",
      "title": "Upload Screenshot",
      "description": "",
      "mode": "view"
    },
    {
      "name": "upload-clipboard",
      "title": "Upload from Clipboard",
      "description": "",
      "mode": "view"
    }

  ],
  "preferences": [
    {
      "name": "ziplineBaseUrl",
      "title": "Zipline Base URL",
      "description": "",
      "type": "textfield"
    },
    {
      "name": "ziplineApiToken",
      "title": "Zipline API Token",
      "description": "",
      "type": "password"
    },
    {
      "name": "defaultFileLocation",
      "title": "Default File Location",
      "description": "The default location where the screenshot are saved",
      "type": "directory",
      "default": "~/Desktop"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.86.0",
    "@raycast/utils": "^1.17.0",
    "axios": "^1.7.9",
    "isbinaryfile": "^5.0.4",
    "untildify": "^5.0.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "20.8.10",
    "@types/react": "18.3.3",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
